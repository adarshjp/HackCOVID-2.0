<script>
    var std = new Date("06/25/2021"); 
    var syd = new Date("07/09/2021");
    var diff= syd.getTime() - std.getTime();
    var diff_days =parseInt(diff / (1000 * 3600 * 24));
    var x="";
    let i;
    for (i=1; i<diff_days; i++) {
        x = x+ "<li><a href=#homeSubmenu>Day "+i+"</a></li>"
    }
    
    x = x+ "<li class="+"active><a href=#homeSubmenu>Day "+i+"</a></li>"
    document.getElementById("tabc").innerHTML = x;
    document.getElementById("review").disabled = true;
    document.getElementById("review_sub").disabled = true;
    var time=new Date();
    x=time.getHours();
    var elements = document.getElementsByName('patient[dailydata][time]');
    if(x<12)
    {
        elements[0].checked = true;
        elements[0].disabled=false;
        elements[1].disabled=true;
        elements[2].disabled=true;
    }
    if(x>=12 && x<16){
        elements[1].checked = true;
        elements[0].disabled=true;
        elements[1].disabled=false;
        elements[2].disabled=true;
    }
    if(x>=16){
        elements[2].checked = true; 
        elements[0].disabled=true;
        elements[1].disabled=true;
        elements[2].disabled=false;
    }
    document.getElementById('day').value = diff_days;
</script>
