<%- include("partials/header") %>
<div class="container-fluid text-center p-2" id="hospcontainer">
    <div class="row justify-content-center align-items-center p-2">
        <h3 class="p-2"></h3>
        <div class="col-12">
            <table class="table table-striped table-dark p-2" id="doctable">
                <tr>
                    <th>Patient ID</th>
                    <th>Name</th>
                    <th>Discharge</th>
                    <th>Extend</th>
                </tr>
                <tr>
                    <td><a href=""></a>id</td>
                    <td>name</td>
                    <td>
                        <button type="button" class="btn btn-outline-primary rounded-pill p-2" data-bs-toggle="modal" data-bs-target="#discharge">
                            Discharge
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-danger rounded-pill p-2" data-bs-toggle="modal" data-bs-target="#extend">
                            Extend
                        </button>
                          
                    </td>
                </tr>
            </table>
        </div>
        <div class="p-2 text-center">
            <a class="btn btn-warning rounded-pill p-2" href="">Log out</a>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="discharge" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to discharge Patientid
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="extend" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to extend quaratine period of Patientid
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer") %>
